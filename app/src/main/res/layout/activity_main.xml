<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/startStopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Play"
        app:layout_constraintEnd_toEndOf="@+id/btnPermisoAlmacenamiento"
        app:layout_constraintStart_toStartOf="@+id/btnPermisoAlmacenamiento"
        app:layout_constraintTop_toBottomOf="@+id/btnPermisoAlmacenamiento" />

    <Button
        android:id="@+id/btnPermisoMicrofono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Microfono"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPermisoAlmacenamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Almacenamiento"
        app:layout_constraintEnd_toEndOf="@+id/btnPermisoMicrofono"
        app:layout_constraintStart_toStartOf="@+id/btnPermisoMicrofono"
        app:layout_constraintTop_toBottomOf="@+id/btnPermisoMicrofono" />
</androidx.constraintlayout.widget.ConstraintLayout>